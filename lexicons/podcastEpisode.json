{
    "lexicon": 1,
    "id": "xyz.groundmist.library.content.podcastEpisode",
    "defs": {
        "main": {
            "type": "object",
            "description": "PodcastEpisode type extending CreativeWork with additional podcast fields.",
            "required": [
                "title",
                "podcastName"
            ],
            "properties": {
                "author": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "datePublished": {
                    "type": "string",
                    "format": "datetime"
                },
                "description": {
                    "type": "string",
                    "maxLength": 256
                },
                "title": {
                    "type": "string"
                },
                "thumbnailUrl": {
                    "type": "string"
                },
                "uri": {
                    "type": "string"
                },
                "duration": {
                    "type": "string"
                },
                "episodeNumber": {
                    "type": "integer"
                },
                "podcastName": {
                    "type": "string"
                },
                "seasonNumber": {
                    "type": "integer"
                }
            }
        }
    }
}
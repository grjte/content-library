{
    "lexicon": 1,
    "id": "xyz.groundmist.library.content.thread",
    "defs": {
        "main": {
            "type": "object",
            "description": "Thread type extending CreativeWork with a required URL override.",
            "required": [
                "title",
                "uri"
            ],
            "properties": {
                "author": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "datePublished": {
                    "type": "string",
                    "format": "datetime"
                },
                "description": {
                    "type": "string",
                    "maxLength": 256
                },
                "title": {
                    "type": "string"
                },
                "thumbnailUrl": {
                    "type": "string"
                },
                "uri": {
                    "type": "string"
                }
            }
        }
    }
}
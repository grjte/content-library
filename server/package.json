{
  "name": "groundmist-content-library-server",
  "author": "grjte",
  "version": "0.1.0",
  "description": "Sync server for a local-first application leveraging ATProto for managing private and public content history",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "build": "tsup",
    "start": "node ./dist/index.js",
    "test": "mocha --exit",
    "prettier": "prettier -c .",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@atproto/lexicon": "^0.4.8",
    "@atproto/xrpc-server": "^0.7.12",
    "@automerge/automerge": "^2.2.4",
    "@automerge/automerge-repo": "^1.2.0",
    "@automerge/automerge-repo-network-websocket": "^1.2.0",
    "@automerge/automerge-repo-storage-nodefs": "^1.2.0",
    "browserless": "^10.7.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "glob": "10.3.10",
    "html-get": "^2.20.0",
    "metascraper": "^5.46.9",
    "metascraper-author": "^5.46.5",
    "metascraper-date": "^5.46.5",
    "metascraper-description": "^5.46.5",
    "metascraper-image": "^5.46.5",
    "metascraper-publisher": "^5.46.5",
    "metascraper-title": "^5.46.5",
    "metascraper-url": "^5.46.5",
    "puppeteer": "^24.4.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/ws": "^8.5.14",
    "mocha": "^10.2.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.1",
    "tsup": "^8.4.0",
    "typescript": "^4.7.4"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "outDir": "dist",
    "format": [
      "esm"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "prettier": {
    "semi": false
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module"
}